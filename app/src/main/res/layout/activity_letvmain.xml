<?xml version="1.0" encoding="utf-8"?>
<com.zmm.leliving.view.CameraView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
   tools:context="com.zmm.leliving.LeLiveMainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/letv_tools"
        android:layout_marginBottom="60dp"
        android:textColor="#8EE2D3"
        android:textSize="27dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停"
        android:id="@+id/letvtitle"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:gravity="center_horizontal"
        android:id="@+id/letv_tools"
        android:layout_alignParentBottom="true"
         android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">
        <ImageButton
            android:layout_marginLeft="30dp"
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/letv_recorder_open"
            />
        <ImageButton
            android:id="@+id/change_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/letv_recorder_flash_white"
            android:layout_alignLeft="@id/open"
            android:layout_marginLeft="60dp"
            />
        <ImageButton
            android:id="@+id/switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/letv_recorder_change_blue"
            android:layout_alignLeft="@id/change_flash"
            android:layout_marginLeft="60dp"
            />
        <ImageButton
            android:id="@+id/switch_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/letv_recorder_postposition_filter"
            android:layout_alignLeft="@id/switch_camera"
            android:layout_marginLeft="60dp"
            />
        <ImageButton
            android:id="@+id/set_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/letv_recorder_mic_blue"
            android:layout_alignLeft="@id/switch_filter"
            android:layout_marginLeft="60dp"
            />
    </RelativeLayout>
</RelativeLayout>

</com.zmm.leliving.view.CameraView>
