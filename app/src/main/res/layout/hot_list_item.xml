<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardBackgroundColor="#DEDEDE"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:padding="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hot_sdv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            fresco:placeholderImage="@mipmap/default_head"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true" />

        <RelativeLayout
            android:id="@+id/hot_lout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/hot_tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="昵称"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hot_tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hot_tv_nick"
                android:drawableRight="@mipmap/payeco_plugin_rightarr"
                android:text="城市"
                android:textColor="#ACACAC"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hot_tv_online_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:text=" "
                android:textColor="#fc762e"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/hot_tv_online_users"
                android:paddingRight="10dp"
                android:text="在看"
                android:textColor="#ACACAC"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/hot_lout2"
        android:paddingBottom="4dp"
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hot_sdv_room"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            fresco:viewAspectRatio="1"
            fresco:placeholderImage="@mipmap/default_room"
            fresco:placeholderImageScaleType="fitCenter"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@mipmap/me_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:background="#fff"
        android:id="@+id/hot_tv_msg"
        android:text="吐槽"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
    </android.support.v7.widget.CardView>