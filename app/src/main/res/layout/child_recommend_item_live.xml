<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/child_item_live_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="2dp"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/child_item_live_sdv1"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            fresco:viewAspectRatio="1"
            fresco:placeholderImage="@mipmap/default_room"
            fresco:placeholderImageScaleType="fitCenter"
            />
        <TextView
            android:id="@+id/child_item_live_online1"
            android:text="0人"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="2dp"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/child_item_live_sdv2"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            fresco:viewAspectRatio="1"
            fresco:placeholderImage="@mipmap/default_room"
            fresco:placeholderImageScaleType="fitCenter"
            />

        <TextView
            android:id="@+id/child_item_live_online2"
            android:text="0人"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="2dp"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/child_item_live_sdv3"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            fresco:viewAspectRatio="1"
            fresco:placeholderImage="@mipmap/default_room"
            fresco:placeholderImageScaleType="fitCenter"
            />
        <TextView
            android:id="@+id/child_item_live_online3"
            android:text="0人"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
   </LinearLayout>
    <TextView
        android:background="#efebeb"
        android:layout_width="match_parent"
        android:layout_height="6dp" />
</LinearLayout>